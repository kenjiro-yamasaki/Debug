<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <logger>

        <!--ConsoleAppender の設定例。-->
        <appender name="ConsoleAppenderExample" type="SoftCube.Logger.ConsoleAppender">

            <!--変換パターン。-->
            <param name="ConversionPattern" value="{date:yyyy-MM-dd HH:mm:ss,fff} [{level,-5}] - {message}{newline}"/>

            <!--最小ログレベル。Trace 以上のログを出力します。-->
            <param name="MinLevel" value="Trace"/>

            <!--最大ログレベル。Fatal 以下のログを出力します。-->
            <param name="MaxLevel" value="Fatal"/>

        </appender>

        <!--StringAppender の設定例。-->
        <appender name="StringAppenderExample" type="SoftCube.Logger.StringAppender">

            <!--上の設定と同じです。-->
            <param name="ConversionPattern" value="{date:yyyy-MM-dd HH:mm:ss,fff} [{level,-5}] - {message}{newline}"/>
            <param name="MinLevel" value="Trace"/>
            <param name="MaxLevel" value="Fatal"/>

        </appender>

        <!--FileAppender の設定例。-->
        <appender name="FileAppenderExample" type="SoftCube.Logger.FileAppender">

            <!--上の設定と同じです。-->
            <param name="ConversionPattern" value="{date:yyyy-MM-dd HH:mm:ss,fff} [{level,-5}] - {message}{newline}"/>
            <param name="MinLevel" value="Trace"/>
            <param name="MaxLevel" value="Fatal"/>

            <!--ファイルパス。-->
            <param name="FilePath" value="{ApplicationData}/Logger.Example/FileAppenderExample.log"/>

            <!--ファイルにログを追加するか。-->
            <param name="Append" value="true"/>

            <!--エンコーディング。-->
            <param name="Encoding" value="UTF-8"/>

        </appender>

        <!--RollingFileAppender の設定例。-->
        <appender name="RollingFileAppenderExample" type="SoftCube.Logger.RollingFileAppender">

            <!--上の設定と同じです。-->
            <param name="ConversionPattern" value="{date:yyyy-MM-dd HH:mm:ss,fff} [{level,-5}] - {message}{newline}"/>
            <param name="MinLevel" value="Trace"/>
            <param name="MaxLevel" value="Fatal"/>
            <param name="FilePath" value="{ApplicationData}/Logger.Example/RollingFileAppenderExample.log"/>
            <param name="Append" value="true"/>
            <param name="Encoding" value="UTF-8"/>

            <!--最大ファイルサイズ。-->
            <param name="MaxFileSize" value="10MB"/>

            <!--最大バックアップ数。-->
            <param name="MaxBackupCount" value="10"/>

        </appender>

        <!-- DailyRollingFileAppender の設定例 -->
        <appender name="DailyRollingFileAppenderExample" type="SoftCube.Logger.DailyRollingFileAppender">

            <!--上の設定と同じです。-->
            <param name="ConversionPattern" value="{date:yyyy-MM-dd HH:mm:ss,fff} [{level,-5}] - {message}{newline}"/>
            <param name="MinLevel" value="Trace"/>
            <param name="MaxLevel" value="Fatal"/>
            <param name="FilePath" value="{ApplicationData}/Logger.Example/DailyRollingFileAppender.log"/>
            <param name="Append" value="true"/>
            <param name="Encoding" value="UTF-8"/>

            <!--日付パターン。-->
            <param name="DatePattern" value="yyyy-MM-dd"/>

        </appender>

        <!--使用する Appender。-->
        <root>
            <appender-ref ref="StringAppenderExample"/>
            <appender-ref ref="RollingFileAppenderExample"/>
            <appender-ref ref="DailyRollingFileAppenderExample"/>
        </root>

    </logger>
</configuration>
